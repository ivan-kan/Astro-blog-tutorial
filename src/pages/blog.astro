---
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogPost from '../components/BlogPost.astro';
const allPosts = Object.values(
    import.meta.glob("./posts/*.md", { eager: true }),
);

// import.meta.glob() will return an array of objects, one for each blog post

const pageTitle = "My Astro Learning Blog";
---

<BaseLayout pageTitle={pageTitle}>
    <p>This is where I will post about my journey learning Astro.</p>

    <ul>
        <!-- Generate the entire blog post dynamically -->
        {
            allPosts.map((post: any) => (
                <BlogPost title={post.frontmatter.title} url={post.url} />
            ))
        }
        <!-- the url attribute is automatically generated by Astro based on how the project is structured and configured -->
    </ul>
</BaseLayout>
